@model WebAppMyper3.Models.Trabajadores

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1>Confirmar Eliminación</h1>

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar este trabajador?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TipoDocumento)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NumeroDocumento)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombres)
        </dd>

        <dt class="col-sm-3">
            Sexo
        </dt>
        <dd class="col-sm-9">
            @(Model.Sexo == "M" ? "Masculino" : "Femenino")
        </dd>

        <dt class="col-sm-3">
            Departamento
        </dt>
        <dd class="col-sm-9">
            @(Model.IdDepartamentoNavigation?.NombreDepartamento ?? "N/A")
        </dd>

        <dt class="col-sm-3">
            Provincia
        </dt>
        <dd class="col-sm-9">
            @(Model.IdProvinciaNavigation?.NombreProvincia ?? "N/A")
        </dd>

        <dt class="col-sm-3">
            Distrito
        </dt>
        <dd class="col-sm-9">
            @(Model.IdDistritoNavigation?.NombreDistrito ?? "N/A")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mt-4">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>